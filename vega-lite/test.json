{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 600,
    "title": "Melbourne - Built-up land (1975-2030)",
    "config":
    {
        "background": "#eaf2f8"
    },
    
    "projection":
    {
        "type": "mercator",
        "scale": 40000,
        "center": [145, -37.875]
        
    },
    
    "layer":
    [
        {
            "data":
            {
                "sphere": true
            },
            "mark":
            {
                "type": "geoshape",
                "fill": "lightblue",
                "stroke": "white"
            }
        },
        {
            "data":
            {
                "url": "https://raw.githubusercontent.com/BrokeBlake/FIT3179-Data-Visualisation-A2/main/data/vic_suburb_boundaries_topojson.json",
                "format":
                {
                    "type": "topojson",
                    "feature": "vic_suburb_boundaries"
                }
            },
            "mark":
            {
                "type": "geoshape",
                "stroke": "white",
                "strokeWidth": 0.5
            },            
            "encoding":
            {
                "color":
                {
                    "value": "#eeeeee" 
                }
            }
        },
        {
            "data":
            {
                "url": "https://raw.githubusercontent.com/BrokeBlake/FIT3179-Data-Visualisation-A2/main/data/builtup_point_data.csv"
            },
            "mark":
            {
                "type": "rect",
                "width": 3,
                "height": 3.6
            },
            "encoding":
            {
                "longitude":
                {
                    "field": "x",
                    "type": "quantitative"
                },
                "latitude":
                {
                    "field": "y",
                    "type": "quantitative"},
                "color":
                {
                    "field": "year",
                    "type": "ordinal",
                    "scale":
                    {
                        "scheme": "greens",
                        "reverse": true
                    },
                    "legend":
                    {
                        "title": "Year considered Developed"
                    }
                },
                "tooltip":
                [
                    {
                        "field": "x",
                        "type": "quantitative",
                        "title": "Longtitude:"
                    },
                    {
                        "field": "y",
                        "type": "quantitative",
                        "title": "Latitude:"
                    },
                    {
                        "field": "year",
                        "type": "quantitative",
                        "title": "Year considered developed"
                    }
                ]
            }
        },
        {
            "data":
            {
                "url": "https://raw.githubusercontent.com/BrokeBlake/FIT3179-Data-Visualisation-A2/main/data/vic_rivers.geojson"
            },
            "mark":
            {
                "type": "geoshape",
                "fill": null,
                "stroke": "lightblue",
                "strokeWidth": "2"
            }
        }
    ]
}