{
	"$schema": "https://vega.github.io/schema/vega-lite/v5.json",
	"width": 800,
	"height": 600,
    "title": "Temporal Population Density (1975-2030)",

    "projection":
    {
        "type": "mercator",
        "scale": 40000,
        "center": [145, -37.875]
        
    },
    "params":
    [
        {
            "name": "selectedyear",
            "value": 2025,
            "bind": {
            "input": "range",
            "min": 1975,
            "max": 2030,
            "step": 5,
            "name": "Choose year: "
            }
        }
    ],
    "layer":
    [
        {
            "data":
            {
                "url": "https://raw.githubusercontent.com/BrokeBlake/FIT3179-Data-Visualisation-A2/main/data/vic_suburb_boundaries_topojson.json",
                "format":
                {
                    "type": "topojson",
                    "feature": "vic_suburb_boundaries"
                }
            },
            "transform":
            [
                {
                "calculate": "datum.properties.LOC_NAME + toString(selectedyear)",
                "as": "suburb_year_key"
                },
                {
                    "lookup": "suburb_year_key",
                    "from":
                    {
                        "data":
                        {
                            "url": "https://raw.githubusercontent.com/BrokeBlake/FIT3179-Data-Visualisation-A2/main/data/population_by_suburb.csv"
                        },
                        "key": "key",
                        "fields":
                        [
                            "pop_density", "year", "pop_total", "area_km2"
                        ]
                    }
                }
            ],
            "mark":
            {
                "type": "geoshape",
                "stroke": "white",
                "strokeWidth": 0.5
            },
            "encoding":
            {
                "color":
                {
                    "field": "pop_density",
                    "type": "quantitative",
                    "title": "Density (pp/km^2)",
                    "scale":
                    {
                        "type": "sqrt",
                        "domain": [0, 15000],
                        "clamp": true,
                        "scheme": "lighttealblue"
                    },
                    "legend": 
                    {
                        "values": [0, 1000, 5000, 19530]
                    }
                },
                "tooltip":
                [
                    {
                        "field": "properties.LOC_NAME",
                        "type": "nominal",
                        "title": "Suburb"
                    },
                    {
                        "field": "pop_total",
                        "type": "quantitative",
                        "title": "Total Population"
                    },
                    {
                        "field": "pop_density",
                        "type": "quantitative",
                        "title": "Population Density (pp/km^2)"
                    },
                    {
                        "field": "area_km2",
                        "type": "quantitative",
                        "title": "Area (km^2)"
                    },
                    {
                        "field": "year",
                        "type": "ordinal",
                        "title": "Year"
                    }
                ]
            }
        }
    ]
}
