{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 600,
    "title": "Greater Melbourne's Urban Sprawl over time",
    
    
    "projection":
    {
        "type": "equirectangular",
        "scale": 23000,
        "center": [145, -37.9]
        
    },
    "layer":
    [
        {
            "data":
            {
                "sphere": true
            },
            "mark":
            {
                "type": "geoshape",
                "fill": "lightblue",
                "stroke": "white"
            }
        },
        {
            "data":
            {
                "url": "/data/vic_land.geojson"
            },
            "mark":
            {
                "type": "geoshape",
                "fill": "beige",
                "stroke": "brown"
            }
        },
        {
            "data":
            {
                "url": "/data/boolean_GHS_melbourne_large.csv"
            },
            "mark":
            {
                "type": "rect",
                "width": 1,
                "height": 1.2
            },
            "encoding":
            {
                "longitude":
                {
                    "field": "x",
                    "type": "quantitative"
                },
                "latitude":
                {
                    "field": "y",
                    "type": "quantitative"},
                "color":
                {
                    "field": "year",
                    "type": "ordinal",
                    "scale":
                    {
                        "scheme": "goldgreen"
                    },
                    "legend":
                    {
                        "title": "Year of Urban Development"
                    }
                },
                "tooltip":
                [
                    {
                        "field": "x",
                        "type": "quantitative",
                        "title": "Longtitude:"
                    },
                    {
                        "field": "y",
                        "type": "quantitative",
                        "title": "Latitude:"
                    },
                    {
                        "field": "year",
                        "type": "quantitative",
                        "title": "Year considered developed"
                    }
                ]
            }
        },
        {
            "data":
            {
                "url": "/data/vic_rivers.geojson"
            },
            "mark":
            {
                "type": "geoshape",
                "fill": null,
                "stroke": "lightblue",
                "strokeWidth": "2"
            }
        }
    ]
}